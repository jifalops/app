{
  "name": "App-Arch: API-Rust",
  "dockerComposeFile": "../../docker-compose.yml",
  "service": "api-rust",
  "remoteUser": "developer",
  "workspaceFolder": "/app-arch/api-rust",
  "postCreateCommand": "../.devcontainer/api-rust/post-create.sh",
  "postStartCommand": "sudo nohup dockerd &",
  "customizations": {
    "vscode": {
      "settings": {
        "lldb.launch.initCommands": [
          // Squelches warning when debugging in the container.
          "settings set target.disable-aslr false"
        ]
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "fill-labs.dependi",
        "EthanSK.restore-terminals",
        "redhat.vscode-yaml",
        "me-dutour-mathieu.vscode-github-actions",
        "mtxr.sqltools",
        "neo4j-extensions.neo4j-for-vscode"
      ]
    }
  }
}